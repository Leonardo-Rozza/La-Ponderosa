---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Servicios from '../components/Servicios.astro';
import Galeria from '../components/Galeria.astro';
import ComoLlegar from '../components/Como-llegar.astro';
import Calendario from '../components/Calendario.astro';
import Button from '../components/Button.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="La Ponderosa">
  <Hero />
  <main class="main-container">
    <Servicios />
    <Galeria />
    <ComoLlegar />
    <Calendario />
    <Button />
  </main>
  <Footer/>
</Layout>

<style>
  .main-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 1400px; 
    margin: 0 auto;
    padding: 0 20px;
  }
</style>
