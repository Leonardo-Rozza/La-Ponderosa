---
 import Image from "astro/components/Image.astro"
 import imagen2 from "../assets/imagen2.jpg"
 import imagen3 from "../assets/imagen3.jpg"
 import imagen4 from "../assets/imagen4.jpg"
 import imagen5 from "../assets/imagen5.jpg"
 import imagen7 from "../assets/imagen7.jpg"
 import imagen8 from "../assets/imagen8.jpg"
---

<section id="galeria" class="galeria">
  <h2>Galería</h2>
  <div class="slider">
    <div class="slider-slides">
      <div class="slider-slide ">
        <Image src={imagen2} quality={"high"} alt="mesa-ping-pong"/>
      </div>
      <div class="slider-slide">
        <Image src={imagen3} quality={"high"}  alt="baños"/>
      </div>
      <div class="slider-slide">
        <Image src={imagen4} quality={"high"} alt="pileta"/> 
      </div>
      <div class="slider-slide active">
        <Image src={imagen5} quality={"high"} alt="quincho amplio"/>
      </div>
      <div class="slider-slide">  
        <Image src={imagen7} quality={"high"} alt="cocina y parrilla"/>
      </div>
      <div class="slider-slide">
        <Image src={imagen8} quality={"high"} alt="frente quincho"/>
      </div>
    </div>
    <div class="slider-buttons">
      <a class="prev-btn">&laquo;</a>
      <a class="next-btn">&raquo;</a>
    </div>
  </div>
</section>

<style>
/** Componente Galeria */
.galeria{
  padding: 25px 20px;
  text-align: center;
  width: 100%;
}

.galeria h2 {
  font-size: 2.5em;
  margin-bottom: 30px;
  color: #343a40;
}

.slider {
  position: relative;
  max-width: 1325px;
  margin: 1rem auto;
}

.slider-slides {
  position: relative;
  height: 700px;
}

.slider-slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 2s ease;
}

.slider-slide.active {
  opacity: 1;
}

.slider-slide img {
  width:  100%;
  height: 100%;
  object-fit: cover;
}

.slider-buttons {
  position: absolute;
  width: 100%;
  top: 50%;
  display: flex;
  text-align: center;
  justify-content: space-between;
  font-size: 3rem;
  font-weight: bold;
}

.slider a {
  display: block;
  width: 4rem;
  height: 4rem;
  border-radius: 50%;
  border: thin solid black;
  text-decoration: none;
  background-color: transparent;
  color: #000;
  transition: all 0.3s ease-in-out;
}

.slider a:hover {
  cursor: pointer;
  color: #fff;
}

/* Estilos para dispositivos móviles */
@media (max-width: 768px) {
  .slider {
    width: 100%;
  }

  .slider-slides {
    height: 400px;
  }

  .slider-slide img {
    height: 100%;
    object-fit: cover;
  }

  .slider-buttons {
    font-size: 2rem;
  }

  .slider a {
    width: 3rem;
    height: 3rem;
  }
}

@media (max-width: 480px) {
  .slider-slides {
    height: 300px;
  }

  .slider-buttons {
    font-size: 1.5rem;
  }

  .slider a {
    width: 2.5rem;
    height: 2.5rem;
  }
}



</style>